<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.hbm2ddl.auto">update</property>
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.password">admin12345</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/erp</property>
        <property name="hibernate.connection.username">postgres</property>

        <mapping class="erp.customUser.CustomUser"/>
        <mapping class="erp.part.Part"/>
        <mapping class="erp.part.PartSet"/>

        <mapping class="erp.orders.JobOrder"/>
        <mapping class="erp.orders.JobOrderHistory"/>

        <mapping class="erp.machines.Machine"/>
        <mapping class="erp.machines.MillingMachine"/>
        <mapping class="erp.machines.TurningMachine"/>
        <mapping class="erp.machines.Grinder"/>
        <mapping class="erp.machines.BoringMachine"/>
        <mapping class="erp.machines.Burner"/>


    </session-factory>
</hibernate-configuration>


